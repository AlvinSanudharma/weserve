{
  "dependencies": {
    "@tailwindcss/cli": "^4.1.12",
    "alpinejs": "^3.15.0",
    "tailwindcss": "^4.1.12"
  },
  "scripts": {
    "start": "npx @tailwindcss/cli -i ./src/input.css -o ./dist/output.css --watch",
    "build:css": "npx @tailwindcss/cli -i ./src/input.css -o ./dist/output.css --minify",
    "build:js": "npx esbuild ./src/app.js --bundle --outfile=dist/app.js",
    "build:html": "cp src/index.html dist/index.html && sed -i 's|../dist/|./|g' dist/index.html",
    "build": "npm run build:css && npm run build:js && npm run build:html"
  },
  "devDependencies": {
    "esbuild": "^0.25.9"
  }
}
